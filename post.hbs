{{!< default}}

{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}
{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}
  {{!-- <div class="pt5 pb3 pb4-ns white bg-charcoal"{{#if @blog.cover_image}} style="background-image: url({{@blog.cover_image}})"{{/if}}> --}}
  <div class="mv3 mv4-l">
    <div class="flex flex-wrap justify-between">
      <div class="f7 ttu tracked b">
        <a href="{{@blog.url}}" class="b no-underline">‚Üê Back to index</a>
      </div>
      <div class="dn db-ns f7 ttu tracked">
        {{#primary_tag}}
        More in <a href="{{url}}" class="b no-underline">{{name}}</a>
        {{/primary_tag}}
      </div>
    </div>
  </div>

  <article class="ph3-m ph4-l content">
    {{#if feature_image}}
    <figure class="mt0 nl3 nr3 nl4-l nr4-l">
      <img src="{{feature_image}}" alt="{{primary_tag.name}}" class="db">
    </figure>
    {{/if}}

    <h1 class="lh-title mw7">{{title}}</h1>

    {{content}}
  </article>

  {{!-- Links to Previous/Next posts --}}
  {{!-- {{#if primary_tag}} --}}
  <aside class="mt4 mt5-m pv4-m flex-m bt b--yk-blue bw2">
    {{#next_post}}
    <div class="w-50-m mv3 mt0-m mb1-m ph4-m">
      <span class="ttu tracked f7 near-white normal o-80 db">Next up</span>
      <a href="{{url}}" class="db">
        <h2 class="f4 mv0">{{title}}</h2>
      </a>
    </div>
    {{/next_post}}
    {{#prev_post}}
    <div class="w-50-m mv3 mt0-m mb1-m ph4-m">
      <span class="ttu tracked f7 near-white normal o-80 db">Previously</span>
      <a href="{{url}}" class="db">
        <h2 class="f4 mv0">{{title}}</h2>
      </a>
    </div>
    {{/prev_post}}
  </aside>
  {{!-- {{/if}} --}}

{{/post}}

{{> "subscribe"}}
