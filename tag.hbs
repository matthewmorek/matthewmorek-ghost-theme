{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The big featured header, it uses blog cover image as a BG if available --}}
{{#tag}}
<header class="ml-auto mr-auto mw7 ph3 ph4-ns ph5-m mb1 mb2-ns mb3-m mt4 mt5-l">
  <h1 class="f3 f2-m mv3 mw6">Posts on {{name}}</h1>
  <p>{{description}}</p>
  <div class="f7 ttu tracked b mv1 mv2-ns mb0 titanium">
    <a href="{{@blog.url}}" class="b">‚Üê Back to index</a>
  </div>
</header>
{{/tag}}

{{!-- The main content area --}}
<main class="ml-auto mr-auto mw7 ph3 ph4-ns ph5-m">
  {{#foreach posts}}

    {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
    {{> "post-card"}}

  {{/foreach}}
</main>
