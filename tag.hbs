{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The big featured header, it uses blog cover image as a BG if available --}}
{{#tag}}
<header class="ml-auto mr-auto mw7 ph3 ph4-ns ph5-m mt3 mt4-m flex flex-column">
  <div class="f7 ttu tracked b mv1 mv2-ns mb0">
    <a href="{{@blog.url}}" class="b no-underline">‚Üê Back to index</a>
  </div>
  <h1 class="mv3 mw6 pastel-blue">Posts on {{name}}</h1>
  {{#if description}}<p>{{description}}</p>{{/if}}
</header>
{{/tag}}

{{!-- The main content area --}}
<main class="ml-auto mr-auto mw7 ph3 ph4-ns ph5-m">
  {{#foreach posts}}

    {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
    {{> "post-card"}}

  {{/foreach}}
</main>
