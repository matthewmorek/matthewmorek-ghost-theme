<article class="mv3 mv4-l{{#if feature_image}} flex-m{{/if}}{{#if featured}} pv1 nl3 nr3 nl4-m nr4-m ph3 ph4-m bg-near-white br2{{/if}}">

  {{#if feature_image}}
    <a class="flex items-center w-35-m" href="{{url}}">
      <picture class="overflow-hidden">
        <img src="{{feature_image}}" alt="{{title}}">
      </picture>
    </a>
  {{/if}}

  <div class="{{#if feature_image}}w-65-m pl3-m pl4-l{{else}}w-100{{/if}} flex flex-column justify-center">
    <h2 class="f3 mb1"><a href="{{url}}">{{title}}</a></h2>
    <p>{{excerpt}}</p>
    {{!-- <p class="mt2"><a class="btn-ghost" href="{{url}}">Read the article</a></p> --}}
